{
  "compilerOptions": {
    "target": "es2017",
    "allowJs": true,
    "moduleResolution": "node",
    "noEmitOnError": false,
    "noEmit": true,
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "<%= dasherizedPackageName %>/tests/*": ["tests/*"],
      "<%= dasherizedPackageName %>/*": [
        "app/*"<%
inRepoAddons.forEach(function(path) { %>,
        "<%= path %>/app/*"<%
}) %>
      ]
    }
  },
  "exclude": [
    "tmp",
    "dist",
    "node_modules",
    "bower_components"
  ]
}
