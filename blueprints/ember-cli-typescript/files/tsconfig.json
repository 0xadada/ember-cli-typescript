{
  "compilerOptions": {
    "target": "es2017",
    "allowJs": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "noImplicitThis": true,
    "noEmitOnError": false,
    "noEmit": true,
    "sourceMap": true,
    "baseUrl": ".",
    "module": "es6",
    "paths": <%= pathsFor(dasherizedPackageName) %>
  },
  "include": [
    "app",
    "tests"<%
additionalIncludes.forEach(function(path) { %>,
    "<%= path %>"<%
}) %>
  ]
}
