{
  "compilerOptions": {
    "target": "es2017",
    "allowJs": true,
    "moduleResolution": "node",
    "noEmitOnError": false,
    "noEmit": true,
    "baseUrl": ".",
    "outDir": "dist",
    "sourceMap": true,
    "paths": {
      "<%= dasherizedPackageName %>/tests/*": ["tests/*"],
      "<%= dasherizedPackageName %>/*": ["app/*"]
    }
  },
  "include": [
    "app/**/*",
    "tests/**/*"
  ]
}
